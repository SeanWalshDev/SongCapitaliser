<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Override the app bar color -->
        <item name="android:actionBarStyle">@style/Dark.ActionBar</item>

        <!-- Support Library Compatibility -->
        <item name="actionBarStyle">@style/Dark.ActionBar</item>

        <!-- this colours th very top where batter and signal are !-->
        <item name="colorPrimaryDark">@color/black</item>

    </style>

    <!-- Style for Action Bar -->
    <style name="Dark.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/Dark.ActionBar.Text</item>

        <!-- Support Library Compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <!-- Style for Action Bar Text -->
    <style name="Dark.ActionBar.Text" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
